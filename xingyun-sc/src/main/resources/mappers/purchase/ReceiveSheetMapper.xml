                    AND r.approve_time <= #{vo.approveEndTime}
                    ]]>
                </if>
                <if test="vo.purchaseOrderCode != null and vo.purchaseOrderCode != ''">
                    AND o.code = #{vo.purchaseOrderCode}
                </if>
