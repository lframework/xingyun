    <sql id="SaleOutSheetDto_sql">
        SELECT
            s.id,
            s.code,
            s.sc_id,
            s.customer_id,
            s.saler_id,
            s.payment_date,
            s.sale_order_id,
            s.total_num,
            s.total_gift_num,
            s.total_amount,
            s.description,
            s.create_by,
            s.create_time,
            s.approve_by,
            s.approve_time,
            s.status,
            s.settle_status
        FROM tbl_sale_out_sheet AS s
        LEFT JOIN tbl_sale_order AS o ON o.id = s.sale_order_id
    </sql>

    <sql id="SaleOutSheetFullDto_sql">
        SELECT
            s.id,
